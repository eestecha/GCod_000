<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ps_tv_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:padding="20dp"
                android:text="@string/indefinido"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <Button
                    android:id="@+id/bt_cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/cancelar" />

                <Button
                    android:id="@+id/bt_aceptar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/aceptar" />
            </LinearLayout>
        </LinearLayout>

        <TableLayout
            android:id="@+id/tb_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TableRow
                android:id="@+id/tbRw4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ps_tv_tit_country_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="country_id" />

                    <EditText
                        android:id="@+id/ps_et_country_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:inputType="number"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:selectAllOnFocus="true" />
                </LinearLayout>
            </TableRow>


            <TableRow
                android:id="@+id/tbRw5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ps_tv_tit_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="name" />

                    <EditText
                        android:id="@+id/ps_et_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="101"
                        android:inputType="text"
                        android:maxLength="100"
                        android:padding="10dp"
                        android:selectAllOnFocus="true" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tbRw6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ps_tv_tit_alpha_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="alpha_2" />

                    <EditText
                        android:id="@+id/ps_et_alpha_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:inputType="text"
                        android:maxLength="2"
                        android:padding="10dp"
                        android:selectAllOnFocus="true" />

                    <TextView
                        android:id="@+id/ps_tv_tit_alpha_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="alpha_3" />

                    <EditText
                        android:id="@+id/ps_et_alpha_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:inputType="text"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:selectAllOnFocus="true" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tbRw7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center|top">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="top">

                    <ImageView
                        android:id="@+id/ps_iv_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minWidth="500dp"
                        android:minHeight="200dp"
                        tools:srcCompat="@tools:sample/avatars[0]" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:id="@+id/tbRw0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/ps_tv_tit_sincro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="sincro" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/ps_et_sincro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="21"
                        android:inputType="text"
                        android:maxLength="20"
                        android:padding="10dp"
                        android:selectAllOnFocus="true" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tbRw1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/ps_tv_tit_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="mark" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/ps_et_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="2"
                        android:inputType="text"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:selectAllOnFocus="true" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tbRw2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/ps_tv_tit_is_deleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="is_deleted" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/ps_et_is_deleted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="2"
                        android:inputType="text"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:selectAllOnFocus="true" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tbRw3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/ps_tv_tit_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="author" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/ps_et_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="101"
                        android:inputType="text"
                        android:maxLength="100"
                        android:padding="10dp"
                        android:selectAllOnFocus="true" />
                </LinearLayout>
            </TableRow>


            <TableRow
                android:id="@+id/tbRw9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/ps_tv_tit_json"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="json" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/ps_et_json"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="101"
                        android:inputType="text"
                        android:maxLength="100"
                        android:padding="10dp"
                        android:selectAllOnFocus="true" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tbRw8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/ps_tv_tit_flag_base64"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="flag_base64" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/ps_et_flag_base64"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="101"
                        android:inputType="text"
                        android:maxLength="100"
                        android:padding="10dp"
                        android:selectAllOnFocus="true" />
                </LinearLayout>
            </TableRow>

        </TableLayout>

    </LinearLayout>

</ScrollView>
